<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="3dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="0dp"
    card_view:cardBackgroundColor="@color/bg4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:id="@+id/h_p_image"/>

                <!--<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext2">

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        >
                    </Spinner>

                </LinearLayout>
        -->
                <RelativeLayout
                    android:layout_below="@id/h_p_image"
                    android:layout_width="wrap_content"
                    android:background="@drawable/edittext8"
                    android:layout_marginTop="7dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/h_p_unitlin"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:id="@+id/h_p_unit"
                        android:textColor="@color/black"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/unitarrow"
                        android:layout_centerVertical="true"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_toRightOf="@id/h_p_unit"/>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/ich"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:maxLines="2"
                        android:text="Product Name"
                        android:paddingRight="10dp"
                        android:id="@+id/h_p_name"
                        android:textSize="17dp"
                        android:textColor="@color/bg3"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sec"/>
                <LinearLayout
                    android:layout_below="@id/l1"
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save  "
                        android:textStyle="bold"
                        android:textColor="@color/bg8"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:background="@drawable/edittext9"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:id="@+id/h_p_offer"
                        android:textAlignment="center"
                        android:text="0"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_below="@id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:text="MRP : \u20B9 " />
                        <TextView
                            android:textColor="#000"
                            android:id="@+id/h_p_actual_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/strike" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HShop : \u20B9 "
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/h_p_offer_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:textSize="17dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:maxLines="2"
                            android:id="@+id/txt_description"
                            android:textSize="15dp"
                            android:textColor="@color/bg3" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/cartadd_min"
                    android:layout_below="@id/l3"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/c_minus"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="-"
                        android:textAlignment="center"
                        android:background="@drawable/circle_receive_bg"
                        android:textColor="@color/bg1" />

                    <TextView
                        android:id="@+id/c_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="10"
                        android:textColor="@color/bg3" />

                    <Button
                        android:id="@+id/c_plus"
                        android:textAlignment="center"
                        android:layout_width="25dp"
                        android:background="@drawable/circle_receive_bg"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:text="+"
                        android:textColor="@color/bg1" />

                </LinearLayout>
                <Button
                    android:layout_below="@id/l3"
                    android:id="@+id/h_p_add"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext7"
                    android:text="ADD to cart"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/test"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:layout_toRightOf="@id/h_p_add"
                    android:layout_below="@id/l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/test2"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:layout_toRightOf="@id/h_p_add"
                    android:layout_below="@id/l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/test1"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:layout_toRightOf="@id/test"
                    android:layout_below="@id/l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@color/bg9"
            android:id="@+id/unitLinear"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>